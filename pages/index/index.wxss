.container {
  justify-content: space-between;
  padding-top: 150rpx;
  padding-bottom: 100rpx;
  background: radial-gradient(circle at 50% -20%, #2A1700 0%, var(--bg) 60%);
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  animation: popIn 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
}

.title {
  font-size: 104rpx;
  font-weight: 900;
  color: #fff;
  letter-spacing: 6rpx;
  text-shadow: 0 0 32rpx rgba(255, 255, 255, 0.2), 0 0 80rpx rgba(255, 107, 0, 0.15);
  line-height: 1.1;
}

.subtitle {
  font-size: 32rpx;
  letter-spacing: 16rpx;
  color: var(--accent);
  font-weight: 800;
  margin-top: 16rpx;
  text-shadow: 0 0 20rpx var(--accent-glow);
}

.slogan {
  margin-top: 32rpx;
  font-size: 28rpx;
  color: var(--muted);
  font-weight: 400;
  letter-spacing: 2rpx;
}

.hero {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  min-height: 400rpx;
}

.halo {
  position: absolute;
  width: 400rpx;
  height: 400rpx;
  background: var(--accent);
  border-radius: 50%;
  filter: blur(120rpx);
  opacity: 0.15;
  animation: pulse 4s ease-in-out infinite;
}

.basketball-icon {
  font-size: 180rpx;
  filter: drop-shadow(0 20rpx 40rpx rgba(255, 107, 0, 0.5));
  animation: float 3s ease-in-out infinite;
  z-index: 2;
}

.actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
  width: 100%;
  padding: 0 32rpx;
  animation: popIn 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.2s forwards;
  opacity: 0;
}

.start-btn {
  width: 100%;
  height: 112rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  letter-spacing: 4rpx;
  border-radius: 28rpx;
}

.version-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.version-container::before,
.version-container::after {
  content: "";
  display: block;
  width: 40rpx;
  height: 2rpx;
  background: rgba(255, 255, 255, 0.1);
}

.version {
  font-size: 24rpx;
  color: var(--muted);
  font-weight: 600;
  letter-spacing: 4rpx;
  opacity: 0.7;
}

.vs-btn {
  background: linear-gradient(135deg, #00E676 0%, #00B25C 100%);
  box-shadow: 0 12rpx 32rpx var(--good-glow);
}

.vs-btn:active {
  box-shadow: 0 4rpx 16rpx var(--good-glow);
}

.action-btn {
  font-size: 30rpx;
  padding: 24rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
}

/* Modal Styles Reuse & Extension */
.modal-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.9);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
}

.modal-content {
  width: 85%;
  background: var(--card-solid);
  padding: 56rpx 48rpx;
  border-radius: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
  border: 1rpx solid rgba(255,255,255,0.1);
  box-shadow: 0 24rpx 64rpx rgba(0,0,0,0.8);
  animation: popIn 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.result-header {
  text-align: center;
}

.result-title {
  font-size: 64rpx;
  font-weight: 900;
  letter-spacing: 4rpx;
  margin-bottom: 12rpx;
  color: #fff;
}

.result-subtitle {
  font-size: 28rpx;
  color: var(--muted);
  text-transform: uppercase;
  letter-spacing: 6rpx;
}

.rules-body {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.rule-p {
  font-size: 28rpx;
  color: #ddd;
  line-height: 1.6;
}

.highlight {
  color: var(--accent);
  font-weight: bold;
}

.legend-row {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-left: 20rpx;
}

.legend-row .cell {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: bold;
  border-radius: 8rpx;
  color: #fff;
}

.correct { background: var(--good); }
.partial { background: var(--partial); color: #000; }
.incorrect { background: var(--bad); }

.legend-text {
  flex: 1;
  font-size: 24rpx;
  color: var(--muted);
  line-height: 1.4;
}

.arrow {
  display: inline-block;
  color: var(--accent);
  font-weight: bold;
  margin: 0 4rpx;
}

.restart-btn {
  width: 100%;
}
