.container {
  padding-top: 100rpx;
  align-items: center;
  justify-content: flex-start;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 64rpx;
}

.title {
  font-size: 64rpx;
  font-weight: 900;
  text-shadow: 0 0 20rpx rgba(255, 107, 0, 0.4);
}

.subtitle {
  font-size: 24rpx;
  letter-spacing: 8rpx;
  color: var(--accent);
}

.room-card {
  width: 100%;
  padding: 48rpx 32rpx;
  border-radius: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

.status-indicator {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--good);
  background: rgba(0, 230, 118, 0.1);
  padding: 12rpx 32rpx;
  border-radius: 100rpx;
  border: 1rpx solid rgba(0, 230, 118, 0.3);
}

.status-indicator .dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: var(--good);
  animation: pulseDot 2s infinite;
}

.status-indicator.guest {
  color: var(--partial);
  background: rgba(255, 234, 0, 0.1);
  border-color: rgba(255, 234, 0, 0.3);
}
.status-indicator.guest .dot { background: var(--partial); }

@keyframes pulseDot {
  0% { transform: scale(0.8); opacity: 0.5; }
  50% { transform: scale(1.2); opacity: 1; }
  100% { transform: scale(0.8); opacity: 0.5; }
}

.room-id {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.room-id .label {
  font-size: 24rpx;
  color: var(--muted);
}

.room-id .value {
  font-size: 40rpx;
  font-weight: bold;
  letter-spacing: 4rpx;
}

.players-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 40rpx;
  width: 100%;
  margin-top: 20rpx;
}

.player-slot {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  width: 40%; /* 2 columns */
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: var(--card-solid);
  border: 4rpx solid rgba(255, 255, 255, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  font-weight: 900;
  color: var(--muted);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.5);
  transition: all 0.3s;
}

.host-slot .avatar {
  border-color: var(--accent);
  color: #fff;
  background: linear-gradient(135deg, rgba(255, 138, 0, 0.2) 0%, rgba(255, 46, 0, 0.2) 100%);
  box-shadow: 0 0 32rpx var(--accent-glow);
}

.guest-slot.joined .avatar {
  border-color: var(--good);
  color: #fff;
  background: linear-gradient(135deg, rgba(0, 230, 118, 0.2) 0%, rgba(0, 178, 92, 0.2) 100%);
  box-shadow: 0 0 32rpx var(--good-glow);
}

.name-badge {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.name {
  font-size: 26rpx;
  font-weight: 600;
}

.host-tag {
  background: var(--accent);
  color: white;
  font-size: 18rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-weight: bold;
}

.actions {
  width: 100%;
  margin-top: auto;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.action-btn {
  width: 100%;
}
